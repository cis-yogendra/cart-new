<div style = "margin-left:20px">	
	<table cellspacing="10">
		<tr>
			<% @products.each_with_index do |product,index| %>
				<% if (index%5) == 0 %>
					</tr>
					<tr>
		    	<% end %>
					<td style = "border: 1px solid black; padding: 50px;">
						<div style = "width:100px">
							<%= image_tag product.image.url(:small)%>
						</div>
						<%= product.description%>
						<%= product.price%>
					</td>
			<%end%>
		</tr>
	</table>
</div>


