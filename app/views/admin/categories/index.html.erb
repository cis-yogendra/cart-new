<div style = "margin-left:50px;">
<table>
  <% @categories.each do |category|%>
      <ul>
        <li>
          <p>
            <%= link_to "#{category.name}", admin_category_path(category) %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <%= link_to 'Destroy', admin_category_path(category), :confirm => 'Are you sure?',:method => :delete %>&nbsp;&nbsp;&nbsp;&nbsp;
          </p>
        </li>
        <ul>
        <% category.sub_categories.each do |sub_category| %>    
          <li>
            <p>
              <%= link_to "#{sub_category.name}", admin_category_path(sub_category)%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              <%= link_to 'Destroy', admin_category_path(sub_category), :confirm => 'Are you sure?',:method => :delete %>&nbsp;&nbsp;&nbsp;&nbsp;
              
            </p> 
          </li>
        <%end%>
        </ul>
      </ul>
    <% end %>
  </table>
<%= link_to "Add Category", new_admin_category_path%><br/><br/>
</div>


